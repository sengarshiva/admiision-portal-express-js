<%- include("../header.ejs") %>
    <br><br><br>
    <h1 class="text-center mt-5">Course Display</h1>
    <div class="container">
        <% if(msg.length> 0){%>
            <div class="alert alert-success">
                <!--to print-->
                <%=msg %>

            </div>
         <% } %>
                <table class="table table-bordered">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Comment</th> 
                        <th>Action</th>
                    </tr>
                    <% d.forEach((item)=>{ %>
                        <tr>
                            <td>
                                <%= item.id %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td> <!--course model name-->
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.status %>
                            </td>
                            <td>
                                <%= item.comment %>
                            </td>
                            <td>
                                <%= item.course %>
                            </td>
                            <td>
                                <a href="/courseView/<%= item.id %>" class="btn btn-info">View</a>
                                <a href="/courseEdit/<%= item.id %>" class="btn btn-info">Edit</a>
                                <!-- <a href="/courseDelete/<%= item.id %>" class="btn btn-info">Delete</a> -->
                            </td>
                        </tr>

                        <% }) %>



                </table>

                <center>
                    <a href="/home" class="btn btn-info">Back DashBoard</a>
                </center>

    </div><!--container end-->



    <%- include("../footer.ejs") %>